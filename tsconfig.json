{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "declaration": true
  },
  "paths": {
    "src/*":[
      "./src/*"
    ]
  },
  "exclude": ["./lib", "./image"],
  "include": ["./src"]
}